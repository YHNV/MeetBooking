<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- <mapper namespace="com.example.mapper.UserMapper"> -->

<mapper namespace="com.zb.backend.mapper.ReservationAttendeeMapper">
    <!-- ReservationAttendee实体类与reservation_attendees表的字段映射 -->
    <resultMap id="ReservationAttendeeResultMap" type="com.zb.backend.entity.ReservationAttendee">
        <result property="id" column="id"/>
        <result property="reservationId" column="reservation_id"/>
        <result property="accountId" column="account_id"/>
        <result property="empName" column="emp_name"/>
    </resultMap>
    <insert id="insertAttendee">
        insert into RESERVATION_ATTENDEES (reservation_id, account_id, emp_name)
        values (#{reservationId}, #{accountId}, #{empName});
    </insert>
    <select id="selectAttendeeList" resultType="com.zb.backend.entity.ReservationAttendee">
        select ACCOUNT_ID, EMP_NAME
        from RESERVATION_ATTENDEES
        where RESERVATION_ID = #{reservationId};
    </select>
</mapper>