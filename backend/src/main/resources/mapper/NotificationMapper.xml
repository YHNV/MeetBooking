<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- <mapper namespace="com.example.mapper.UserMapper"> -->

<mapper namespace="com.zb.backend.mapper.NotificationMapper">
    <!-- Notification实体类与notifications表的字段映射 -->
    <resultMap id="NotificationResultMap" type="com.zb.backend.entity.Notification">
        <result property="notificationId" column="notification_id"/>
        <result property="senderId" column="sender_id"/>
        <result property="receiverId" column="receiver_id"/>
        <result property="notificationType" column="notification_type"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="relatedId" column="related_id"/>
        <result property="isRead" column="is_read"/>
        <result property="createTime" column="create_time"/>
        <result property="readTime" column="read_time"/>
    </resultMap>
    <insert id="insertNotification">
        insert into NOTIFICATIONS (SENDER_ID, RECEIVER_ID, TITLE, CONTENT, RELATED_ID)
        values (#{senderId}, #{receiverId}, #{title}, #{content}, #{relatedId});
    </insert>
</mapper>